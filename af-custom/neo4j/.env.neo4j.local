    # Neo4j Configuration for Local Docker Compose
    LOCAL_USERNAME=neo4j
    LOCAL_PASSWORD=password

    # Host port mappings for docker-compose
    LOCAL_HOST_HTTP_PORT=7484
    LOCAL_HOST_BOLT_PORT=7697

    # Internal container listen ports for Neo4j
    LOCAL_CONTAINER_HTTP_LISTEN_PORT=7474
    LOCAL_CONTAINER_BOLT_LISTEN_PORT=7687

    # Advertised addresses for local access (use host ports here)
    LOCAL_BOLT_ADVERTISED_ADDRESS=localhost # Hostname for advertised address
    LOCAL_HTTP_ADVERTISED_ADDRESS=localhost # Hostname for advertised address
    LOCAL_DEFAULT_ADVERTISED_ADDRESS=localhost # Hostname for advertised address

    LOCAL_CERT_CN=localhost # CN for self-signed cert generated by custom-entrypoint.sh

    # Memory settings for local
    LOCAL_HEAP_INITIAL_SIZE=512m
    LOCAL_HEAP_MAX_SIZE=512m
    LOCAL_PAGECACHE_SIZE=1g

    # Other standard Neo4j settings using placeholder prefixes for compose substitution
    LOCAL_ACCEPT_LICENSE_AGREEMENT=yes
    LOCAL_INITIAL_DB_DEFAULT_DATABASE=neo4j
    LOCAL_DBMS_SECURITY_PROCEDURES_UNRESTRICTED=apoc.*
    LOCAL_DBMS_SECURITY_PROCEDURES_ALLOWLIST=apoc.*
    LOCAL_SERVER_CONFIG_STRICT__VALIDATION_ENABLED=false
    LOCAL_SERVER_BOLT_TLS_LEVEL=REQUIRED
    LOCAL_DBMS_SSL_POLICY_BOLT_ENABLED=true
    LOCAL_DBMS_SSL_POLICY_BOLT_BASE_DIRECTORY=/var/lib/neo4j/certificates/bolt
    LOCAL_DBMS_SSL_POLICY_BOLT_PRIVATE_KEY=private.key
    LOCAL_DBMS_SSL_POLICY_BOLT_PUBLIC_CERTIFICATE=public.crt
    LOCAL_DBMS_SSL_POLICY_BOLT_CLIENT_AUTH=NONE